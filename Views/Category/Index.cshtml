@model IEnumerable<Agile3.Models.Category>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Categories</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">Create New Category</a>
        }
    </div>

    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">Products: @category.Products.Count</p>
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@category.Id" 
                            class="btn btn-primary">View Products</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@category.Id" 
                                class="btn btn-warning">Edit</a>
                                <form asp-action="Delete" asp-route-id="@category.Id" 
                                    method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger" 
                                            onclick="return confirm('Are you sure?');">Delete</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>